packages:
  yum:
    R: "latest"  # Install the latest version of R

commands:
  install_devtools:
    command: "sudo R -e 'install.packages(\"devtools\", repos=\"http://cran.rstudio.com/\")'"  # Install devtools
  install_ggplot2:
    command: "sudo R -e 'install.packages(\"ggplot2\", repos=\"http://cran.rstudio.com/\")'"   # Install ggplot2
  install_dplyr:
    command: "sudo R -e 'install.packages(\"dplyr\", repos=\"http://cran.rstudio.com/\")'"     # Install dplyr
  install_ggtranscript:
    command: "sudo R -e 'devtools::install_github(\"dzhang32/ggtranscript\")'"  # Install ggtranscript from GitHub
